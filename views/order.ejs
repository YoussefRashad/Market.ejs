<%- include('./Parts/head.ejs')%>
<%- include('./Parts/navbar.ejs')%>


<table class="table table-striped table-bordered container my-5 text-center">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">amount</th>
            <th scope="col">Cost</th>
            <th scope="col">Total</th>
            <th scope="col">address</th>
            <th scope="col">Status</th>
            <th scope="col">Time</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        <% for(let i=0; i<orders.length; i++){ %>
            <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= orders[i].cartName %></td>
                <td><%= orders[i].amount %></td>
                <td><%= orders[i].price %></td>
                <td><%= (+orders[i].price) * (+orders[i].amount) %></td>
                <td><%= orders[i].address %></td>
                <td><%= orders[i].status %></td>
                <td><%= orders[i].timeStamp %></td>
                <td>
                    <form action="/order/cancel" method="post">
                        <input type="hidden" name="ID" value="<%= orders[i]._id %>">
                        <input type="submit" value="Cancel" class="btn btn-danger">
                    </form>
                </td>
            </tr>
        <% } %>

    </tbody>
</table>

<form action="/order/cancelAll" method="post" style="padding-left: 43%;">
    <input type="submit" value="Cancel All Orders" class="btn btn-danger btn-lg">
</form>







