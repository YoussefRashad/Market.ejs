<%- include('./Parts/navbar.ejs')%>



<div class="container text-center my-3">
    <h3>Login to your Account</h3>
    <form action="/login" method="post">
        <input type="text" class="form-control my-4" name="email" placeholder="Email">
        <input type="password" class="form-control my-4" name="password" placeholder="Password">
        <input type="submit" value="login" class="btn btn-primary btn-lg">
    </form>
    <h5>
        Don't have an accout ? <a href="/signup">Signup</a>
    </h5>
</div>

<% if(authError){ %>
    <p class="container alert alert-danger text-center"> <%= authError.msg%> </p>
<% }%>





