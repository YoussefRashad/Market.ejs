<%- include('./Parts/head.ejs')%>
<%- include('./Parts/navbar.ejs')%>


<div class="container">
    <form method="GET">
        <div class="row justify-content-center mx-4 my-5">
                <input type="submit" value="All" class="col-3 btn btn-primary btn-lg">
                <input type="submit" value="Pending" class="col-3 btn btn-primary btn-lg">
                <input type="submit" value="Sent" class="col-3 btn btn-primary btn-lg">
                <input type="submit" value="Completed" class="col-3 btn btn-primary btn-lg">
                <p class="w-100"></p>
                <input type="text" name="email" placeholder="User Email" class="col-9">
                <input type="submit" value="Search" class="col-3 btn btn-primary btn-lg col-3">
        </div>
    </form>


    <table class="table table-striped table-bordered container my-5 text-center">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Product Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Cost</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Time</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% for(let i=0; i<products.length; i++){ %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td>email</td>
                    <td><%= products[i].cartName %></td>
                    <td><%= products[i].amount %></td>
                    <td><%= (+products[i].price) * (+products[i].amount) %></td>
                    <td><%= products[i].address %></td>
                    <td><%= products[i].status %></td>
                    <td><%= products[i].timeStamp %></td>
                    <td>
                        <form action="/order/cancel" method="post">
                            <input type="hidden" name="ID" value="<%= products[i]._id %>">
                            <input type="submit" value="Cancel" class="btn btn-success">
                        </form>
                    </td>
                </tr>
            <% } %>

        </tbody>
    </table>

</div>






<%- include('./Parts/footer.ejs')%>